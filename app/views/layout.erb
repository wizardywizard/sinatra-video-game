  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>SinatraVideoGame</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>
    <nav>
    <a href="/video_games">All Games</a>
    <a href="/video_games/new">New Game</a>
    <% if logged_in?%>
      <form method="post" action="/logout" style="display: inLine">
      <input type="hidden" name="_method" value="delete"/>
      <input type="submit" value="Log Out"/>
      </form>
    <%else%>
    <a href="/registrations/signup">Sign Up</a>
    <a href="/sessions/login">Log In</a>
    <%end%>
    </nav>
    <%if logged_in?%>
    <p>Currently logged in as: <%= current_user.name || "user"%></p>
    <%end%>
    <div class="wrapper">
    <div style="color: red">
      <%= @error %>
      </div>
        <%= yield %>

      <footer class="branding">
        <small>&copy; 2019 <strong>SinatraVideoGame</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
