<h1>New Game</h1>
<form method="post" action="/video_games">
 <p>
    <label for="title" style="display: block;">Title:</label>
    <input type="text" name="title" />
 </p>
 <p>
 <label for="system" style="display: block;">System:</label>
 <input type="text" name="system" />
 </p>
 <p>
 <label for="genre" style="display: block;">Genre:</label>
 <input type="text" name="genre" />
 </p>
 <p>
 <label for="complete?" style="display: block;">Did you complete it?</label>
 <input type="radio" name="complete" value="false" /> False
 <input type="radio" name="complete" value="true" /> True
 </p>
 <p>
 <label for="multiplayer?" style="display: block;">Can you play with friends?</label>
 <input type="radio" name="multiplayer" value="false" /> False
 <input type="radio" name="multiplayer" value="true" /> True
 </p>
 <input type="submit" value="Add Game" />
 </form>